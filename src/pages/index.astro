  <script>
    import { animate, stagger, inView, scroll } from "motion";
    scroll(animate(".progress-bar", { scaleX: [0, 1] }));

    inView(".fotoinview", () => {
      animate(".fotoinview", { x: [-2000, 0] }, { duration: 3 });
    });

    inView(".fotoinview2", () => {
      animate(".fotoinview2", { x: [2000, 0] }, { duration: 3 });
    });

    const stickyBtn = document.getElementById("sticky-btn");
    const stopTrigger = document.getElementById("stop-trigger");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            stickyBtn.classList.add("opacity-0", "pointer-events-none");
          } else {
            stickyBtn.classList.remove("opacity-0", "pointer-events-none");
          }
        });
      },
      { threshold: 0.1 },
    );

    observer.observe(stopTrigger);
  </script>
