---

//henter parametrene fra Astro.props
const{ variant="primary", size="medium"} = Astro.props;

//Definer den styling (Tailwind classes, der gør dig gældende for alle knapper)
const buttonStyling = "border-2 px-8 py-1 font-poppins-semibold";

//Definer den styling (Tailwind Classes), der gør sig gældende for de forskellige varianter
const variantClasses={
    "primary": "border-plasticpink bg-plasticpink text-eggs font-semibold transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:scale-110 cursor-pointer",
    "secondary": "border-plasticpink rounded-lg bg-plasticpink text-eggs font-semibold transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:scale-110 cursor-pointer"
};

//Definer den styling (Tailwind classes), der gør sig gældende de forskellige størrelser
const sizeClasses = {
    "large": "text-lg",
     "medium": "text-base",
      "small": "text-sm"
};



---


<div>
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>