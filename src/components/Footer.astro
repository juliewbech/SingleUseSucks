---
import Button2 from "../components/Button2.astro";
import Link from "../components/Link.astro";
---

<section
  class="bg-darkblue grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 p-10 text-white poppins-regular text-sm"
>
  <div class="mb-8">
    <Button2 variant="primary" size="medium" class="pb-6"
      >Plastic Change</Button2
    >
    <p class="pt-6">Mail.</p>
    <Link href="#" variant="primary" size="large">info@plasticchange.org</Link>
    <p>Tlf.</p>
    <Link href="#" variant="primary" size="large"> +45 42 66 72 46</Link>
    <p class="pt-4">Telefontid. Mandag – Fredag, 10:00 – 15:00</p>
    <p class="poppins-extralight text-xs pt-4">
      Website af <span class="text-platicpink">Savage Studio</span>
    </p>
    <p class="poppins-thin text-xs pt-4">© 2025 Plastic Change</p>
  </div>
  <div class="mb-8">
    <p class="poppins-semibold pb-3">Om os</p>
    <Link href="#" variant="secondary" size="large"
      >Forening Plastic Change</Link
    >
    <Link href="#" variant="secondary" size="large">Sådan arbejder vi</Link>
    <Link href="#" variant="secondary" size="large">Regnskab & vedtægter</Link>
    <Link href="#" variant="secondary" size="large">Presse</Link>
    <Link href="#" variant="secondary" size="large">Kontakt os</Link>
  </div>
  <div class="mb-8">
    <p class="poppins-semibold pb-3">Støt vores arbejde</p>
    <Link href="#" variant="secondary" size="large">Giv et bidrag</Link>
    <Link href="#" variant="secondary" size="large">Bliv medlem</Link>
    <Link href="#" variant="secondary" size="large">Lav et testamente</Link>
    <Link href="#" variant="secondary" size="large">Støt som virksomhed</Link>
  </div>
  <div class="mb-8">
    <p class="poppins-semibold pb-3">Praktisk information</p>
    <p>CVR. 35778985</p>
    <p>Konto. 8411 0002039618</p>
    <p>MobilePay. 304961</p>
    <p>SWIFT. FAELDKK1</p>
    <p>IBAN. DK3584110002039618</p>
    <Link href="#" variant="secondary" size="large">Privatlivspolitik</Link>
    <Link href="#" variant="secondary" size="large">Betalingspolitik</Link>
  </div>
  <div class="col-span-1 sm:col-span-2 md:col-span-3 lg:col-span-1">
    <section class="grid grid-cols-4 gap-4">
      <div class="flex justify-center">
        <a href="#">
          <div class="group relative w-12 h-12">
            <img
              src="/facebook.svg"
              alt="Default Icon"
              class="absolute inset-0 h-full w-full transition-opacity duration-300 group-hover:opacity-0"
            />
            <img
              src="/facebook-hover.svg"
              alt="Hover Icon"
              class="absolute inset-0 h-full w-full opacity-0 transition-opacity duration-300 group-hover:opacity-100"
            />
          </div>
        </a>
      </div>
      <div class="flex justify-center">
        <a href="#">
          <div class="group relative w-12 h-12">
            <img
              src="/twitter.svg"
              alt="Default Icon"
              class="absolute inset-0 h-full w-full transition-opacity duration-300 group-hover:opacity-0"
            />
            <img
              src="/twitter-hover.svg"
              alt="Hover Icon"
              class="absolute inset-0 h-full w-full opacity-0 transition-opacity duration-300 group-hover:opacity-100"
            />
          </div>
        </a>
      </div>
      <div class="flex justify-center">
        <a href="#">
          <div class="group relative w-12 h-12">
            <img
              src="/linkedin.svg"
              alt="Default Icon"
              class="absolute inset-0 h-full w-full transition-opacity duration-300 group-hover:opacity-0"
